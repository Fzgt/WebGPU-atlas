{
  "compilerOptions": {
    "target": "esnext",
    "types": [
      "vite/client",
      "@webgpu/types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@mocks/*": [
        "mocks/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}